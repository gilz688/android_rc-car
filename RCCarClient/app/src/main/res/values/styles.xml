<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize theme colors here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Use custom material button (not needed in Lollipop -->
        <item name="android:buttonStyle">@style/MaterialButton</item>
    </style>

    <!-- Style for Progress Bar on Toolbar -->
    <style name="spbToolbar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/progressbar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

    <!-- Custom material design button -->
    <style name="MaterialButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:background">@drawable/material_button</item>
    </style>
</resources>
