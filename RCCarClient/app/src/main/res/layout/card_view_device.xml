<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_view_device">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivDeviceIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:gravity="center_vertical"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/ivDeviceIcon"
        android:gravity="center_horizontal|bottom"
        android:text="Unknown Device"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/tvIpAddress"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="127.0.0.1"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/tvDeviceName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ivDeviceIcon"
        android:layout_toEndOf="@+id/ivDeviceIcon" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>